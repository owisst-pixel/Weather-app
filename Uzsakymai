    <script>
        let orders = [];
        let editingOrderId = null;
        let currentFilter = 'all';
        let actionHistory = [];

        function loadOrders() {
            const saved = localStorage.getItem('ordersData');
            if (saved) {
                orders = JSON.parse(saved);
            }
            renderOrders();
            updateStats();
        }

        function saveOrders() {
            localStorage.setItem('ordersData', JSON.stringify(orders));
        }

        function saveAction(type, data) {
            actionHistory.push({
                type: type,
                data: JSON.parse(JSON.stringify(data)),
                timestamp: Date.now()
            });
            
            if (actionHistory.length > 10) {
                actionHistory.shift();
            }
            
            document.getElementById('undoBtn').disabled = false;
        }

        function undoLastAction() {
            if (actionHistory.length === 0) return;
            
            const lastAction = actionHistory.pop();
            
            switch(lastAction.type) {
                case 'add':
                    orders = orders.filter(o => o.id !== lastAction.data.id);
                    break;
                case 'edit':
                    const index = orders.findIndex(o => o.id === lastAction.data.id);
                    if (index !== -1) {
                        orders[index] = lastAction.data;
                    }
                    break;
                case 'delete':
                    orders.push(lastAction.data);
                    break;
            }
            
            saveOrders();
            renderOrders();
            updateStats();
            
            if (actionHistor
